<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
         xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:menu="urn:import:org.insset.client.menu">

<g:HTMLPanel>
    <menu:Menu ui:field="menu"/>
    <h1>Projet de mise en pratique Scrum</h1>       
    <div class="bs-section">
        <g:FlowPanel>
            <g:FlowPanel>
                <g:Label>Connaitre la remise effectué et le prix final a partir d'un montant et d'un pourcentage</g:Label>
            </g:FlowPanel>
            <g:FlowPanel>          
              <g:TextBox ui:field="val" text="Entrer le montant"/>
              <g:TextBox ui:field="val2" text="Entrer le pourcentage"/>
              <g:SubmitButton ui:field="boutonConvert" text="Convertir"/>
            </g:FlowPanel>
            <g:FlowPanel>
                <g:Label ui:field="errorLabel" ></g:Label>
            </g:FlowPanel>
            <g:FlowPanel >
                
                <g:ResetButton ui:field="boutonClear" text="Reset"/>
            </g:FlowPanel>
            
            <g:FlowPanel>
                <g:Label>Connaitre le prix de depart a partir d'un montant et d'un pourcentage</g:Label>
            </g:FlowPanel>
            <g:FlowPanel>          
              <g:TextBox ui:field="val2_1" text="Entrer le montant après réduction"/>
              <g:TextBox ui:field="val2_2" text="Entrer le pourcentage"/>
              <g:SubmitButton ui:field="boutonConvert2" text="Convertir"/>
            </g:FlowPanel>
            <g:FlowPanel>
                <g:Label ui:field="errorLabel2" ></g:Label>
            </g:FlowPanel>
            <g:FlowPanel >
                
                <g:ResetButton ui:field="boutonClear2" text="Reset"/>
            </g:FlowPanel>
        </g:FlowPanel>
      <!--</g:Form>-->
    </div>
    <!-- E. Container Right -->

  </g:HTMLPanel>
</ui:UiBinder>